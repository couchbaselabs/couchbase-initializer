<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss} %-5p [%c:%L] %m%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="Console"/>
    </Root>
    <Logger name="com.couchbase.client.core.deps.io.netty" level="warn"/>
    <Logger name="com.couchbase" level="info"/>
    <!-- Uncomment the following line to see Couchbase network traffic
         captured by the io.captureTraffic client setting. -->
    <!--    <Logger name="com.couchbase.io" level="trace"/>-->
  </Loggers>
</Configuration>
